<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/OTG">

    <TextView android:text="OTG Forensics " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="25dp" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hashes"
            android:id="@+id/md5button"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp"
            android:onClick="md5button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MD5 HASH"
            android:id="@+id/md5hashOutput"
            android:layout_below="@+id/md5button"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            android:id="@+id/ImagingBtn"
            android:layout_alignTop="@+id/md5button"
            android:layout_centerHorizontal="true"
            android:onClick="ImagingBtn"

            android:background="#ffff000c" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHA1 Hash"
            android:id="@+id/SHA1HashOutput"
            android:layout_below="@+id/md5hashOutput"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHA-256 Hash"
            android:id="@+id/SHA256HashOutput"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/SHA1HashOutput"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dir Path"
        android:id="@+id/TrgtDir"
        android:layout_below="@+id/SHA256HashOutput"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>


