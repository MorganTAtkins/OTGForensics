<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/OTG">

    <TextView android:text="OTG Forensics " android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="25dp" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hash Files"
            android:id="@+id/md5button"
            android:onClick="md5button"
            android:layout_below="@+id/dirContent"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MD5 HASH"
            android:id="@+id/md5hashOutput"
            android:layout_below="@+id/md5button"
            android:layout_alignParentStart="true"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image"
            android:id="@+id/ImagingBtn"
            android:onClick="ImagingBtn"

            android:background="#ffff000c"
            android:enabled="true"
            android:clickable="false"
            android:layout_above="@+id/dirContent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="41dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHA1 Hash"
            android:id="@+id/SHA1HashOutput"
            android:layout_below="@+id/md5hashOutput"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHA-256 Hash"
            android:id="@+id/SHA256HashOutput"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/SHA1HashOutput"
            android:layout_alignParentStart="true"
            android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dir Path"
        android:id="@+id/TrgtDir"
        android:layout_alignBaseline="@+id/SHA1HashOutput"
        android:layout_alignBottom="@+id/SHA1HashOutput"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrayOutputList"
        android:choiceMode="singleChoice"
        android:layout_alignTop="@+id/SHA256HashOutput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show dir content"
        android:id="@+id/dirContent"
        android:layout_below="@+id/dirSelector"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Dir"
        android:id="@+id/dirSelector"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true" />

</RelativeLayout>


